<%= form_for @encounter do |f| %>
  <%= f.label :name %>
    <br><br>
  <%= f.text_field :name %>
    <br><br><br>
  <%= f.label :content %>
    <br>
  <%= f.text_area :content %>
    <br></br>
  <%= f.label "Very Easy Monsters:" %>
  <%= f.collection_check_boxes :monster_ids, @very_easy_monsters, :id, :name %>

    <br><br>

  <%= f.label "Easy Monsters:" %>
  <%= f.collection_check_boxes :monster_ids, @easy_monsters, :id, :name %>

    <br><br>

  <%= f.label "Medium Monsters:" %>
  <%= f.collection_check_boxes :monster_ids, @medium_monsters, :id, :name %>

    <br><br>

  <%= f.label "Hard Monsters:" %>
  <%= f.collection_check_boxes :monster_ids, @hard_monsters, :id, :name %>

    <br><br>

  <%= f.label "Very Hard Monsters:" %>
  <%= f.collection_check_boxes :monster_ids, @very_hard_monsters, :id, :name %>

    <br><br>

  <%= f.label "Impossible Monsters:" %>
  <%= f.collection_check_boxes :monster_ids, @impossible_monsters, :id, :name %>

    <br><br>

  <%= f.label "Characters:" %>

  <%= f.collection_check_boxes :character_ids, @characters, :id, :char_name_and_level %>
    <br></br>
    <%= f.submit %>
<% end %>
  <br>
<%= button_to "Browse All Monsters", monsters_path, {method: :get} %><br>
  <br>
<%= button_to "Browse All Characters", characters_path, {method: :get} %><br>
  <br>
<%= button_to "Back to Homepage", root_path, {method: :get} %><br>
