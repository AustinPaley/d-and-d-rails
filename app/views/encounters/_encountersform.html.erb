<%= form_for @encounter do |f| %>
<%= f.label :name %>
<br><br>
<%= f.text_field :name, class: "encounter_name" %>
<br><br><br>
<%= f.label :content %>
<br>
<%= f.text_area :content %>
<br>
<%= f.label "Monster" %>
<br>
<%= f.collection_check_boxes :monster_id, @monster, :id, :name %>
<br><br>
<%= f.label "Character" %>
<br>
<%= f.collection_check_boxes :character_id, @character, :id, :name %>
<br><br><br>
<%= f.submit %>
<% end %>
