<%= form_for @encounter do |f| %>
  <%= f.label :name %>
    <br><br>
  <%= f.text_field :name %>
    <br><br><br>
  <%= f.label :content %>
    <br>
  <%= f.text_area :content %>
    <br></br>
  <%= f.label "Monsters:" %>

  <%= f.collection_check_boxes :monster_ids, @monsters, :id, :name %>

    <br><br>

  <%= f.label "Characters:" %>

  <%= f.collection_check_boxes :character_ids, @characters, :id, :name %>
    <br></br>
    <%= f.submit %>
<% end %>
  <br>
<%= button_to "Browse All Monsters", monsters_path, {method: :get} %><br>
  <br>
<%= button_to "Browse All Characters", characters_path, {method: :get} %><br>
  <br>
<%= button_to "Back to Homepage", root_path, {method: :get} %><br>
