<h1>Current Characters:</h1>
<%= flash[:notice] if flash[:notice] %>
<br>
<%= render "heading" %>
<br><br>
<br>
<%= render "search" %>
<p class="errors"><%= flash[:errors] if flash[:errors] %></p>
<ul>
  <% @characters.each do |character| %>
    <li><%= link_to character.name, character_path(character) %></li>
      <ul>
        <% character.pets.each do |pet| %>
          <li><u>Pets:</u> <%= link_to pet.name, pet_path(pet) %></li>
        <% end %>
      </ul>
  <% end %>
</ul>
<br></br>

<%= button_to "Create New Character", new_character_path, {method: :get} %><br>

<%= button_to "Back to Homepage", root_path, {method: :get} %>
