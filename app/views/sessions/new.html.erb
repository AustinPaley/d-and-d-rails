<h1>Log In</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |err| %>
    <%= err %>
  <% end %>
<% end %>

<%= form_tag sessions_path do %>
  <%= label_tag :username %>
  <%= text_field_tag :username %>

  <%= label_tag :password %>
  <%= password_field_tag :password %>

  <%= submit_tag %>
<% end %>
